{
	"name": "koota",
	"version": "0.4.2",
	"description": "ðŸŒŽ Performant real-time state management for React and TypeScript",
	"license": "ISC",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./react": {
			"types": "./src/react.ts",
			"import": "./src/react.ts"
		}
	},
	"files": [
		"src",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"main": "./dist/index.cjs",
		"module": "./dist/index.js",
		"types": "./dist/index.d.ts",
		"exports": {
			".": {
				"types": {
					"import": "./dist/index.d.ts",
					"require": "./dist/index.d.cts"
				},
				"import": "./dist/index.js",
				"require": "./dist/index.cjs"
			},
			"./react": {
				"types": {
					"import": "./dist/react.d.ts",
					"require": "./dist/react.d.cts"
				},
				"import": "./dist/react.js",
				"require": "./dist/react.cjs"
			}
		},
		"files": [
			"dist",
			"react",
			"README.md",
			"LICENSE"
		]
	},
	"scripts": {
		"build": "tsup && tsx scripts/copy-readme.ts && tsx scripts/copy-react-files.ts",
		"test": "vitest --environment=jsdom",
		"generate-tests": "tsx scripts/generate-tests.ts"
	},
	"devDependencies": {
		"@koota/core": "workspace:*",
		"@koota/react": "workspace:*",
		"@testing-library/react": "^16.2.0",
		"esbuild-plugin-inline-functions": "^0.1.0",
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0",
		"@config/typescript": "workspace:*",
		"tsup": "^8.3.0",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"react": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	}
}
